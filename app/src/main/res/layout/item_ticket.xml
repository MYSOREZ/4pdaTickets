<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Статус и дата -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Индикатор статуса -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/circle_shape"
                android:layout_marginEnd="8dp" />

            <!-- Статус текст -->
            <TextView
                android:id="@+id/textStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Новый"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorSecondary" />

            <!-- Дата -->
            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.01.2024 12:00"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorTertiary" />

        </LinearLayout>

        <!-- Заголовок тикета -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заголовок тикета"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="?android:attr/textColorPrimary" />

        <!-- Раздел -->
        <TextView
            android:id="@+id/textSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Раздел форума"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="?android:attr/textColorSecondary" />
            
        <!-- Отправитель -->
        <TextView
            android:id="@+id/textSender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отправитель: Неизвестен"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="?android:attr/textColorTertiary"
            android:visibility="gone" />

        <!-- ID тикета -->
        <TextView
            android:id="@+id/textTicketId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#12345"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:textColor="?android:attr/textColorTertiary" />

    <!-- Детальная информация (скрыта по умолчанию) -->
    <LinearLayout
        android:id="@+id/expandedContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="12dp" />

        <!-- Тема -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тема:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/textTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Не указана"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="8dp" />

        <!-- Ответственный -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ответственный:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/textModerator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Не назначен"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="8dp" />

        <!-- Автор поста -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Автор поста:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/textPostAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Неизвестен"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- Кнопка перехода к тикету -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpenTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Перейти к тикету"
            android:textAllCaps="false"
            app:icon="@drawable/ic_open_in_browser"
            app:iconGravity="textEnd"
            app:iconSize="18dp" />

    </LinearLayout>

</LinearLayout>

</com.google.android.material.card.MaterialCardView>
